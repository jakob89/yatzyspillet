        public void buttonNytSpil_Click(object sender, EventArgs e)
        {
            ClearText();
            mitYatzy.NytSpil();
           
        }

        private void textBoxSumP1_TextChanged(object sender, EventArgs e)
        {
            textBoxSumP1.Text = mitYatzy._spiller1.SimpelSum.ToString
        }
